{
  "name": "helpme-slack-bot",
  "version": "0.2.0",
  "private": true,
  "license": "MIT",
  "type": "module",
  "scripts": {
    "dev": "pkill -f 'node.*app.ts' 2>/dev/null || true; NODE_ENV=development nodemon --watch src --ext ts --exec \"node --loader ts-node/esm src/app.ts\"",
    "build": "tsc -p tsconfig.json",
    "start": "NODE_ENV=production node dist/app.js",
    "lint": "eslint . --ext .ts || true",
    "test": "vitest run || true",
    "test:watch": "vitest || true",
    "keygen": "node -e \"console.log(require('crypto').randomBytes(32).toString('base64'))\""
  },
  "dependencies": {
    "@slack/bolt": "^3.17.1",
    "@slack/web-api": "^7.1.0",
    "axios": "^1.7.2",
    "better-sqlite3": "^9.6.0",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "form-data": "^4.0.4",
    "pino": "^9.2.0",
    "reflect-metadata": "^0.1.13",
    "sqlite3": "^5.1.7",
    "typeorm": "^0.3.20",
    "uuid": "^9.0.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/express": "^4.17.21",
    "@types/form-data": "^2.2.1",
    "@types/node": "^20.12.12",
    "@types/uuid": "^10.0.0",
    "eslint": "^9.5.0",
    "nodemon": "^3.0.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.3",
    "vitest": "^1.6.0"
  }
}
